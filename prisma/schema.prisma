generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model teacher {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  acronym   String
  email     String
  firstname String
  lastname  String
  password  String
  t_id      Int
  hospitations hospitations[]
}

model hospitations {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  date        String
  endtime     String
  feedback    String?
  h_id        Int
  ht_id       Int?
  information String
  starttime   String
  status      String
  subject     String
  t_id        String  @db.ObjectId
  teacher   teacher   @relation(fields: [t_id], references: [id])
}